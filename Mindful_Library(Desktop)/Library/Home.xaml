<Window x:Class="Library.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home Page" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid RenderTransformOrigin="0.65,-0.172">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/livres.jpg"/>
        </Grid.Background>
        <UniformGrid Columns="2" VerticalAlignment="Center" HorizontalAlignment="Center" Rows="2" Width="648" Height="414">
            <!-- Books Management Button -->

            <!-- Member Management Button -->

            <Button Width="200" Height="150" Margin="50,30,0,10" Click="BooksManagement_Click" FontSize="20" FontFamily="Brush Script MT" Background="#FFECBD92">
                <StackPanel>
                    <TextBlock Text="Books Management" TextAlignment="Center"/>
                    <Image Source="/Images/books.png" Width="80" Height="80"/>
                </StackPanel>
            </Button>

            <Button Width="195" Height="150" Margin="-2,20,0,0" Click="MemberManagement_Click" FontSize="20" FontFamily="Brush Script MT" Background="#FFECBD92">
                <StackPanel>
                    <TextBlock Text="Member Management" TextAlignment="Center"/>
                    <Image Source="/Images/students.png" Width="80" Height="80"/>
                </StackPanel>
            </Button>

            <Button Width="198" Height="150" Margin="50,0,0,10" Click="UserManagement_Click" FontSize="20" FontFamily="Brush Script MT" Background="#FFECBD92">
                <StackPanel>
                    <TextBlock Text="User Management" TextAlignment="Center"/>
                    <Image Source="/Images/users.png" Width="80" Height="80"/>
                </StackPanel>
            </Button>

            <!-- Reservation Management Button -->
            <Button Width="200" Height="150" Margin="0,0,0,10" Click="ReservationManagement_Click" FontSize="20" FontFamily="Brush Script MT" Background="#FFECBD92">
                <StackPanel>
                    <TextBlock Text="Reservation Management" TextAlignment="Center"/>
                    <Image Source="/Images/reservation.png" Width="80" Height="80"/>
                </StackPanel>
            </Button>
        </UniformGrid>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
